  <div class="row mt-5">


        
        <% if(productdata.length>0){ %>
        <div class="row mt-5">
          <%for(var i=0; i<productdata.length;i++){%>
          <div class="col-md-4 mt-5">
            <div class="pet-card card">
              <img src="/<%= productdata[i].filename %>" class="pet-card-img-top " alt="Cat 1">
