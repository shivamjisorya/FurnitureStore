                <p class="card-text"> <strong>Rs. <%= productdata[i].productprice %></strong></p>
                <button class="btn btn-checkout btn-checkout1 btn_clk"  onclick="openOffCanvas()" data-name="<%= productdata[i].productname %>" data-type="<%= productdata[i].producttype %>" data-price="<%= productdata[i].productprice %>" data-filename="<%= productdata[i].filename %>">
                  <i class="fas fa-shopping-cart"></i> Add to Cart
                </button>
              <a href="/productdetail/<%= productdata[i]._id %>"><button  class="btn btn-checkout">Details</button></a>
              </div>
            </div>
